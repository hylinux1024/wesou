<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_repository"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/ghost_white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_poster"
            android:layout_toRightOf="@+id/iv_poster"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            tools:text="飓风营救第一季/全集" />

        <TextView
            android:id="@+id/tv_video_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_video_name"
            android:layout_alignStart="@+id/tv_video_name"
            android:layout_below="@+id/tv_video_name"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            tools:text="英文全名Taken，第1季(2017)NBC.
本季看点：《飓风营救》电视剧版可被看做电影版的前传，Bryan Mills（Clive Standen）还很年轻，既没有妻子也没有孩子。" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
